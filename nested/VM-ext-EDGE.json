{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "VMName": {
      "type": "string",
      "metadata": {
        "description": "The Name of the Load Balancer"
      }
    },
    "DomainName": {
      "type": "string",
      "metadata": {
        "description": "The FQDN of the AD Domain created "
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "The name of the Administrator of the new VM and Domain"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The password for the Administrator account of the new VM and Domain"
      }
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The location of resources such as templates and DSC modules that the script is dependent"
      }
    },
    "_SfBshareLocation": {
      "type": "string",
      "metadata": {
        "description": "The location of Skype Software: The Azure storage name"
      }
    },
    "_SfBshareSasToken": {
      "type": "string",
      "metadata": {
        "description": "The token to access the storage name location of Skype Software"
      }
    },
    "CAComputerName": {
      "type": "string",
      "metadata": {
        "description": "The Server Name of the Certificate Authority"
      }
    },
    "PublicCert": {
      "type": "bool",
      "metadata": {
        "description": "Is public Certificate to use"
      }
    }
  },
  "variables": {
    "VMid": "[resourceId('Microsoft.Compute/virtualMachines', parameters('VMName'))]",
    "DSCid": "[concat(variables('VMid'),'/extensions/DnsSuffix')]",
    "DnsSuffix-dscmoduleURL": "[concat(parameters('_artifactsLocation'), '/dsc/', 'DnsSuffix.ps1.zip')]",
    "DnsSuffixFunction": "DnsSuffix.ps1\\DnsSuffix"
  },
  "resources": [
    {
      "name": "[concat(parameters('VMName'), '/DnsSuffix')]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "tags": {
        "displayName": "Edge-DnsSuffix"
      },
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.9",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "modulesUrl": "[variables('DnsSuffix-dscmoduleURL')]",
          "configurationFunction": "[variables('DnsSuffixFunction')]",
          "properties": {
            "DomainName": "[parameters('DomainName')]"
          }
        }
      }
    },
    {
      "name": "[concat(parameters('VMName'), '/EDGE-Install')]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "tags": {
        "displayName": "EDGE-Install"
      },
      "dependsOn": [
        "[variables('DSCid')]"
      ],
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "CustomScriptExtension",
        "typeHandlerVersion": "1.4",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "[concat(parameters('_artifactsLocation'), '/scripts/EDGE-Install.ps1')]"
          ]
        },
        "protectedsettings": {
          "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -File EDGE-Install.ps1 -DomainName ', parameters('domainName'),' -Username ', parameters('adminUsername'),' -Password ', parameters('adminPassword'),' -CAComputerName ', parameters('CAComputerName'), ' -Share ', parameters('_SfBshareLocation'),' -sasToken ', parameters('_SfBshareSasToken'),' -PublicCert ', parameters('PublicCert'))]"
        }
      }
    }
  ],
  "outputs": {
  }
}
